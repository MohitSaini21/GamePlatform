    <script>
        function Submit(){
         const userName = document.getElementById('userName').value; // User Name
      const email = document.getElementById('exampleInputEmail1').value; // Email
      const password = document.getElementById('exampleInputPassword1').value; // Password
      const termsAccepted = document.getElementById('exampleCheck1').checked; // Terms checkbox

      // Validate form data (you can add more checks as per your requirements)
      if (!userName || !email || !password) {
        alert("Please fill out all required fields.");
        return;
      }
       // If terms are not accepted
      if (!termsAccepted) {
        alert("You must agree to the terms and conditions.");
        return;
      }
         // Create a data object to send in the POST request
      const formData = {
        userName: userName,
        email: email,
        password: password,

        
      };


   // Make the POST request using Fetch API
fetch("/signup", {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json'
  },
  body: JSON.stringify(formData)
})
.then(response => {
  return response.json(); // Assuming the response is in JSON format
})
.then(data => {
  // Check for error status codes
  if (data.success === false) {
    if (data.message === "Error: User already exists") {
      alert(data.message); // Display error message
      return; // Stop further execution if user already exists
    } else {
      alert(data.message); // General error message
      return;
    }
  }

  
  
  window.location.href="/login"
})
.catch(error => {
  // Handle any errors (network issues, server errors, etc.)
  alert(`An error occurred: ${error.message}`);
});
        }
