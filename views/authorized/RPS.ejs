    <div class="container game-container">
  <h1>Rock Paper Scissors Game</h1>

  <!-- Buttons for player choices -->
  <div class="d-flex justify-content-center">
    <button class="btn btn-outline-primary btn-choice" id="rock">Rock</button>
    <button class="btn btn-outline-secondary btn-choice" id="paper">Paper</button>
    <button class="btn btn-outline-danger btn-choice" id="scissors">Scissors</button>
  </div>

  <!-- Display result and score -->
  <div class="result-message" id="resultMessage"></div>
  <div class="scoreboard">
    <p>Player Score: <span id="playerScore">0</span></p>
    <p>Computer Score: <span id="computerScore">0</span></p>
  </div>

